<Window x:Class="KeiaLab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeiaLab6"
        mc:Ignorable="d"
        Title="Laboratoire 6 : Projet Keia" Height="769" Width="950" ResizeMode="NoResize" Icon="/fond_ecran.jpg" WindowStartupLocation="CenterScreen" Cursor="UpArrow">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/fond_ecran.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="226*"/>
            <RowDefinition Height="428*"/>
            <RowDefinition Height="99*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Logo" HorizontalAlignment="Stretch" Height="109" Margin="48,10,0,0" VerticalAlignment="Top" Width="170" Grid.Column="2">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/logo.jpg"/>
            </Image.OpacityMask>
        </Image>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="20,84,0,0" TextWrapping="Wrap" Text="Sélectionnez la référence du produit" VerticalAlignment="Top" Foreground="#FFF6F9F6" FontFamily="Baskerville Old Face" FontSize="24" Width="443" Height="27"/>
        <ComboBox Name="ListeID" Grid.Column="1" HorizontalAlignment="Left" Height="34" Margin="21,115,0,0" VerticalAlignment="Top" Width="434"/>
        <TextBox x:Name="Affichage" HorizontalAlignment="Left" Margin="124,180,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="753" Height="471" Opacity="0.5" Foreground="#FF0A0C59" Grid.RowSpan="2" Grid.IsSharedSizeScope="True" Grid.ColumnSpan="3"/>
        <Button x:Name="Imprimer" Grid.Column="1" Content="Imprimer" HorizontalAlignment="Left" Margin="429,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="90" IsDefault="True" Cursor="Hand" Height="31"/>
        <Button x:Name="Reinitialiser" Grid.Column="2" Content="Réinitialiser" HorizontalAlignment="Left" Margin="12,32,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Cursor="Pen" Height="31"/>
        <Label Content="Bienvenue au centre de documentation de Keia" HorizontalAlignment="Left" Margin="-359,88,0,0" VerticalAlignment="Top" Foreground="#FFF1E4E4" FontSize="32" Grid.ColumnSpan="2" Width="772" Height="75" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.337"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>
</Window>
